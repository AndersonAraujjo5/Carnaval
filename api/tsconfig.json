{
  "compilerOptions": {
    "target": "ES2022",                     // Define a versão alvo do JavaScript
    "module": "CommonJS",                    // Usa CommonJS para compatibilidade com Node.js
    "rootDir": "src",                        // Define o diretório raiz do código-fonte
    "outDir": "dist",                        // Define o diretório de saída dos arquivos compilados
    "strict": true,                           // Ativa verificações mais rígidas do TypeScript
    "esModuleInterop": true,                  // Permite importações compatíveis com ES Modules
    "forceConsistentCasingInFileNames": true, // Impede diferenças de maiúsculas/minúsculas em imports
    "skipLibCheck": true,                     // Ignora checagem de tipos em arquivos de bibliotecas
    "resolveJsonModule": true,                // Permite importar arquivos JSON
    "allowJs": true,                          // Permite importar arquivos JavaScript
    "noImplicitAny": true,                    // Impede uso de `any` implícito
    "strictNullChecks": true,                 // Torna nulo e indefinido tipos distintos
    "noUnusedLocals": true,                   // Impede variáveis locais não utilizadas
    "noUnusedParameters": true,               // Impede parâmetros não utilizados
    "noImplicitReturns": true,                // Exige que todas funções tenham retorno explícito
    "noFallthroughCasesInSwitch": true,       // Impede comportamento inesperado em switch-case
    "moduleResolution": "node",               // Resolve módulos no estilo Node.js
    "baseUrl": ".",                           // Define a base dos imports relativos
    "paths": {                                // Define atalhos para imports
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],  // Inclui todos os arquivos na pasta `src`
  "exclude": ["node_modules", "dist"] // Exclui `node_modules` e arquivos compilados
}
